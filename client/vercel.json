# Vercel Configuration for Monorepo Structure

# This file should be placed in the client directory
# OR configure Vercel to use client as root directory

{
  "version": 2,
  "buildCommand": "npm ci && npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm ci",
  "framework": "vite",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "VITE_API_URL": "https://syncruncode-backend.onrender.com",
    "VITE_SOCKET_URL": "https://syncruncode-backend.onrender.com"
  }
}
