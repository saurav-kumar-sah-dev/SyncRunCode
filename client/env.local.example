# Client Environment Variables for Local Development
# Copy this file to .env and modify as needed

# API Configuration
VITE_API_URL=http://localhost:5000
VITE_SOCKET_URL=http://localhost:5000

# Application Configuration
VITE_APP_NAME=SyncRunCode
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Real-time collaborative code compiler

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_HOT_RELOAD=true

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Editor Configuration
VITE_EDITOR_THEME=vs-dark
VITE_EDITOR_FONT_SIZE=14
VITE_EDITOR_TAB_SIZE=2

# Security Configuration
VITE_ENABLE_HTTPS=false
VITE_ENABLE_CSP=true

# Development Configuration
VITE_DEV_PORT=3000
VITE_DEV_HOST=localhost
