{
  "version": 2,
  "name": "syncruncode",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "env": {
    "VITE_API_URL": "https://syncruncode.onrender.com",
    "VITE_SOCKET_URL": "https://syncruncode.onrender.com"
  },
  "functions": {
    "client/dist/**": {
      "runtime": "nodejs18.x"
    }
  }
}
